{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "answers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "value": { "type": "number" }
        },
        "required": ["id", "name", "value"]
      },
      "minItems": 1
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "content": { "type": "string" },
          "weights": {
            "type": "object",
            "additionalProperties": { "type": "number" }
          }
        },
        "required": ["id", "content", "weights"]
      },
      "minItems": 1
    },
    "axes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "bias": { "type": "number" }
        },
        "required": ["id", "name"]
      }
    }
  },
  "required": ["id", "name", "answers"]
}
